<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    tools:context=".recycler">

    <ImageView
        android:id="@+id/imagerecycler"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:adjustViewBounds="true"
        android:background="@drawable/shadowprofile" />

    <TextView
        android:id="@+id/namerecycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="45dp"
        android:text="name"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/imagerecycler"
        app:layout_constraintStart_toEndOf="@+id/imagerecycler"
        app:layout_constraintTop_toTopOf="@+id/imagerecycler" />

    <TextView
        android:id="@+id/phoneRecycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="45dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="phone"
        app:layout_constraintBottom_toBottomOf="@+id/imagerecycler"
        app:layout_constraintStart_toEndOf="@+id/imagerecycler"
        app:layout_constraintTop_toTopOf="@+id/imagerecycler" />
</androidx.constraintlayout.widget.ConstraintLayout>